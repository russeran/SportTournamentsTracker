<%- include('../partials/header') %>
    <div class="parent">
        <div class="div1">

            <div class="div2">
                <table class="team-info">

                    <tr>
                        <td>
                            <h3>Team Name:</h3>
                        </td>
                        <td>
                            <h3>
                                <%= team.name %>
                            </h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>World Cup Title:</h3>
                        </td>
                        <td>
                            <h3>
                                <%= team.worldCupTitles %>
                            </h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>Group:</h3>
                        </td>
                        <td>
                            <h3>
                                <%= team.group %>
                            </h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>Continent:</h3>
                        </td>
                        <td>
                            <h3>
                                <%= team.continent %>
                            </h3>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="div3">
                <h2>TEAM PLAYER LIST</h2>
                <form method="POST" action="/teams/<%= team._id %>/players">
                    <label for="">Player Name</label>
                    <input name="name" type="text">
                    <label for="">Age</label>
                    <input name="age" type="number">
                    <label for="">Position</label>
                    <select name="position" id="">
    <option value="Goalkeeper">Goalkeeper</option>
    <option value="Defender">Defender</option>
    <option value="Midfielder">Midfielder</option>
    <option value="Forward">Forward</option>
</select>
                    <label for="">Current Team</label>
                    <input name="currentTeam" type="text">

                    <button><input type="submit" value="ADD"></button>
                </form>
                <% if (team.players.length) { %>
                    <table class="table" id="player-info">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Position</th>
                                <th>Current Team</th>
                            </tr>

                        </thead>
                        <tbody>
                            <% team.players.forEach(function(player) { %>
                                <tr>
                                    <td>
                                        <%= player.name %>
                                    </td>
                                    <td>
                                        <%= player.age %>
                                    </td>
                                    <td>
                                        <%= player.position %>
                                    </td>
                                    <td>
                                        <%= player.currentTeam %>
                                    </td>
                                </tr>
                                <% }); %>

                        </tbody>
                    </table>
                    <% } else { %>
                        <h4> No Player Yet</h4>
                        <% } %>
            </div>
            <div class="div4">
                <table>
                    <thead>
                        <th>
                            <h3>Game Date</h3>
                        </th>
                        <th>
                            <h3>Opponent</h3>
                        </th>
                        <th>
                            <h3>Stadium</h3>
                        </th>
                    </thead>
                    <% games.forEach(function(game) { %>
                        <tr>
                            <td>
                                <%= game.date %>
                            </td>
                            <td>
                                <%= game.team2 %>
                            </td>
                            <td>
                                <%= game.stadium %>
                            </td>
                        </tr>
                        <% }); %>

                </table>

                <button><a href="/teams/<%=team._id%>/games/new">ADD NEW GAME</a></button>

            </div>
            <div class="div5"> </div>
        </div>
    </div>

    <%- include('../partials/footer')  %>