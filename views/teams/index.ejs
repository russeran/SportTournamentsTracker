<%- include('../partials/header') %>

    <table id="allteams" class="table">
        <thead>
            <tr>
                <th>Team</th>
                <th>WC Title</th>
                <th>Group</th>
                <th>Continent</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% teams.forEach(function(team) { %>
                <tr>
                    <td>
                        <%= team.name %>
                    </td>
                    <td>
                        <%= team.worldCupTitles %>
                    </td>
                    <td>
                        <%= team.group %>
                    </td>
                    <td>
                        <%= team.continent %>
                    </td>

                    <td><a href="/teams/<%= team.id %>">View Details</a></td>
                    <form action="/teams/<%= team.id%>?_method=DELETE" method="POST"> <button type="submit">DELETE</button></form>
                </tr>
                <% }); %>

        </tbody>

    </table>


    <%- include('../partials/footer') %>